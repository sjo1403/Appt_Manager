<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomer">
   <children>
      <HBox prefHeight="50.0" prefWidth="500.0">
         <children>
            <Label text="Add Customer">
               <HBox.margin>
                  <Insets left="45.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
      <AnchorPane layoutY="54.0" prefHeight="300.0" prefWidth="560.0">
         <children>
            <HBox prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="ID">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="IDtxt" editable="false" opacity="0.5" style="-fx-background-color: gray;" text="Auto Gen- Disabled">
                     <HBox.margin>
                        <Insets left="55.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Italic" size="13.0" />
                     </font>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="50.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Name">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="nameTxt">
                     <HBox.margin>
                        <Insets left="35.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="100.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Address">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="addressTxt">
                     <HBox.margin>
                        <Insets left="23.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="150.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Postal Code">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="postalTxt">
                     <HBox.margin>
                        <Insets left="3.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="200.0" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <Label text="Phone">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="phoneTxt" promptText="xxx-xxx-xxxx">
                     <HBox.margin>
                        <Insets left="35.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="250.0" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <ComboBox fx:id="countryBox" onAction="#countryBox" prefWidth="150.0" promptText="Country">
                     <HBox.margin>
                        <Insets left="115.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox fx:id="divisionBox" prefWidth="150.0" promptText="Division">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
      <HBox layoutY="372.0" prefHeight="50.0" prefWidth="500.0">
         <children>
            <Button fx:id="saveBttn" mnemonicParsing="false" onAction="#saveBttn" text="Save">
               <HBox.margin>
                  <Insets left="230.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelBttn" mnemonicParsing="false" onAction="#cancelBttn" text="Cancel">
               <HBox.margin>
                  <Insets left="30.0" top="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
